<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Theme.EventoCompartidos.Fondo"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <ImageView
        android:id="@+id/imgMostrarProducto"
        android:layout_width="57dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtNombreProducto"
        style="@style/Theme.EventoCompartidos.ColorLetra"
        android:layout_width="122dp"
        android:layout_height="match_parent"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtDescripcionProducto"
        style="@style/Theme.EventoCompartidos.ColorLetra"
        android:layout_width="127dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/txtPrecioProducto"
        style="@style/Theme.EventoCompartidos.ColorLetra"
        android:layout_width="68dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txteuros"
        style="@style/Theme.EventoCompartidos.ColorLetra"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="â‚¬"
        android:textStyle="bold" />
</LinearLayout>