<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    style="@style/Theme.EventoCompartidos.Fondo"
    android:layout_height="80dp">

    <TextView
        style="@style/Theme.EventoCompartidos.ColorLetra"
        android:id="@+id/txt1"
        android:text="@string/product_name_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        style="@style/Theme.EventoCompartidos.ColorLetra"
        android:id="@+id/txtNombreProductoMostrar"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        style="@style/Theme.EventoCompartidos.ColorLetra"
        android:id="@+id/text2"
        android:text="@string/cuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        style="@style/Theme.EventoCompartidos.ColorLetra"
        android:id="@+id/txtCantidadProductoMostrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView" />
</LinearLayout>