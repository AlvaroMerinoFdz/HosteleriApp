<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HosteleriApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_green_500</item>
        <item name="colorPrimaryVariant">@color/colorLetra</item>
        <item name="colorOnPrimary">@color/light_green_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_green_700</item>
        <item name="colorSecondaryVariant">@color/light_green_700</item>
        <item name="colorOnSecondary">@color/light_green_700</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.HosteleriApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.HosteleriApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.HosteleriApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>